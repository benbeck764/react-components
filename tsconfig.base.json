{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2019",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "paths": {
      "@benbeck764/react-components": ["./packages/base/src/index.ts"],
      "@benbeck764/react-components-common": ["./packages/common/src"],
      "@benbeck764/react-components-datepicker": ["./packages/date-picker/src"],
      "@benbeck764/react-components-dropzone": ["./packages/dropzone/src"],
      "@benbeck764/react-components-grid": ["./packages/grid/src"],
      "@benbeck764/react-components-imagecropper": [
        "./packages/image-cropper/src"
      ],
      "@benbeck764/react-components-texteditor": ["./packages/text-editor/src"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
