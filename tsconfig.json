{
  "compilerOptions": {
    "target": "ES2019",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@benbeck764/react-components": ["./packages/base/dist"],
      "@benbeck764/react-components/*": ["./packages/base/dist/*"],
      "@benbeck764/react-components-common": ["./packages/common/dist"],
      "@benbeck764/react-components-common/*": ["./packages/common/dist/*"],
      "@benbeck764/react-components-datepicker": ["./packages/date-picker/src"],
      "@benbeck764/react-components-datepicker/*": [
        "./packages/date-picker/src/*"
      ],
      "@benbeck764/react-components-dropzone": ["./packages/dropzone/src"],
      "@benbeck764/react-components-dropzone/*": ["./packages/dropzone/src/*"],
      "@benbeck764/react-components-grid": ["./packages/grid/src"],
      "@benbeck764/react-components-grid/*": ["./packages/grid/src/*"],
      "@benbeck764/react-components-imagecropper": [
        "./packages/image-cropper/src"
      ],
      "@benbeck764/react-components-imagecropper/*": [
        "./packages/image-cropper/src/*"
      ],
      "@benbeck764/react-components-texteditor": ["./packages/text-editor/src"],
      "@benbeck764/react-components-texteditor/*": [
        "./packages/text-editor/src/*"
      ]
    }
  }
}
