{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2019",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "declarationDir": "dist",
    "emitDeclarationOnly": false,
    "outDir": "dist"
    // "moduleResolution": "node",
    // "allowSyntheticDefaultImports": true,
    // "forceConsistentCasingInFileNames": true,
    // "noFallthroughCasesInSwitch": true,
    // "allowJs": true
  },
  "include": ["src/**/*.ts*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/_stories/**/*",
    "src/**/*.stories.tsx"
  ]
}
